@page
@model LoginModel

@{
    ViewData["Title"] = "Log In";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-12">
        <section>
            <form id="account" method="post">
                <h2 class="text-center mb-4">Welcome Back!</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <ejs-textbox id="email" placeholder="Email" autocomplete="username" ejs-for="Input.Email" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Input.Email" class="text-danger fs-6"></span>
                </div>
                <div class="form-floating mb-4">
                    <ejs-textbox id="password" placeholder="Password" autocomplete="new-password" ejs-for="Input.Password" type="password" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Input.Password" class="text-danger fs-6"></span>
                </div>
                <div class="checkbox mb-4">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div class="mb-4">
                    <button id="login-submit" type="submit" class="w-100 btn custom-button-color">Log in</button>
                </div>
                <div class="text-center">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
